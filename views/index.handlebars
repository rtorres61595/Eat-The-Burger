<h1>Eat dah Burger!</h1>

<h2>DAH burgers!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burgers_name devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers you ate</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burgers_name devoured=false}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form action="/api/burgers" method="POST" class="create-form">

    <div class="form-group">
        <label for="burgers">burger Name:</label>
        <input type="text" class="form-control" id="enter-text" name="burger_name">
    </div>

    <button type="submit">Add burger</button>
</form>




<li>
    {{burgers_name}}

    <button class="eat-burger" data-id="{{id}}" data-devoured="{{devoured}}">
        {{#if devoured}}yum!{{else}}ew dude!{{/if}}
    </button>

    <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>