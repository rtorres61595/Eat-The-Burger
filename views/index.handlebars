<h1>Eat dah Burger!</h1>

<h2>DAH burgers!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burgers_name}} 
        <button class="eat-burger"  data-id="{{id}}" >EAT</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers you ate</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{burgers_name}}   
         <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>

    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form id="post-burger">

    <div class="form-group">
        <label for="burgers">burger Name:</label>
        <input type="text" class="form-control" id="add-burger" name="burger_name">
    </div>

    <button type="submit">Add burger</button>

</form>