
<h1>Eat dah Burger!</h1>

<h2>DAH burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers_name devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers you ate</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers_name devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgers">burger Name:</label>
    <input type="text" id=" " burgers_name ="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> ew dude
  </div>

  <button type="submit">Add burger</button>
</form>




<li>
	{{burgers_name}}

	<button class="change-sleep" data-id="{{id}}" data-devoured="{{devoured}}">
		{{#if devoured}}yum!{{else}}ew dude!{{/if}}
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
